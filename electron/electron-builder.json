{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.cinitix.boxoffice",
  "productName": "Cinitix - Box Office",
  "asar": false,
  "directories": {
    "output": "dist-electron",
    "buildResources": "electron/resources"
  },
  "files": [
    "dist/**/*",
    "electron/main.cjs",
    "electron/preload.cjs",
    "electron/cinema-selector.html",
    "public/app-icon.ico"
  ],
  "extraMetadata": {
    "main": "electron/main.cjs"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "public/app-icon.ico",
    "artifactName": "Cinitix-BoxOffice-${version}-Setup.${ext}"
  },
  "nsis": {
    "oneClick": true,
    "perMachine": false,
    "allowElevation": true,
    "installerIcon": "public/app-icon.ico",
    "uninstallerIcon": "public/app-icon.ico",
    "installerHeaderIcon": "public/app-icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Cinitix - Box Office"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "public/app-icon.ico",
    "artifactName": "Cinitix-BoxOffice-${version}.${ext}",
    "category": "public.app-category.business"
  },
  "dmg": {
    "title": "Cinitix - Box Office",
    "icon": "public/app-icon.ico"
  },
  "linux": {
    "target": ["AppImage"],
    "icon": "public/app-icon.ico",
    "category": "Office",
    "artifactName": "Cinitix-BoxOffice-${version}.${ext}"
  }
}
